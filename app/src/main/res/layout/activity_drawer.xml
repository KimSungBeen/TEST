<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/notice"
        android:gravity="center"
        android:text="@string/subMenu"
        android:textColor="@color/mainLogo"
        android:textStyle="bold|italic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

    <TextView
        android:id="@+id/TV_workoutFriend"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/workoutFriend"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

    <TextView
        android:id="@+id/TV_BMI"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/bmiCalculate"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

    <TextView
        android:id="@+id/TV_publicSptCenterInfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/publicSptCenter"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

    <TextView
        android:id="@+id/TV_foodElements"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/foodDB"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layoutColor" />

</LinearLayout>